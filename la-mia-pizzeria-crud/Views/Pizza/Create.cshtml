@model PizzaFormModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>
                La nuova Pizza
            </h1>

            <form asp-controller="Pizza" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input type="text" class="form-control" asp-for="Pizza.Name">
                    <span asp-validation-for="Pizza.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Descrizione:</strong>
                    <input type="text" class="form-control" asp-for="Pizza.Description">
                    <span asp-validation-for="Pizza.Description" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <strong>Url dell'immagine:</strong>
                    <input type="text" class="form-control" asp-for="Pizza.Image">
                    <span asp-validation-for="Pizza.Image" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input type="text" class="form-control" asp-for="Pizza.Prize">
                    <span asp-validation-for="Pizza.Prize" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="Pizza.CategoryId" class="form-control">
                        <option value="Seleziona una categoria"></option>
                        @foreach(Category category in Model.Categories) {
                            @if (Model.Pizza.CategoryId == category.Id) {
                            <option value="@category.Id" selected>@category.Name</option>
                            }
                            else {
                            <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
            
                </div>
                <div class="mb-3">
                    <strong>Ingredienti:</strong>
                    <select asp-for="SelectedIngredientsId"
                            multiple="multiple"
                            class="form-control"
                            asp-items="@Model.Ingredients">
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Crea nuova pizza</button>
            </form>
        </div>
    </div>
</div>