@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli pizza @Model.Name</h1>
            </div>
            <div class="post-single-image-container">
                <img  src="@Model.Image" />

            </div>
            <p>
                <strong>Pizza:</strong>
                @Model.Name
            </p>
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>

            <p>
                <strong>Categoria:</strong>
                @if (Model.Category != null)
                {
                    @Model.Category.Name
                }
                else
                {
                    <span>Nessuna categoria</span>
                }
            </p>

      

            @if (Model.Ingredients.Any())
            {
            <p> <strong>Ingredienti:</strong> @string.Join(", ", Model.Ingredients.Select(i => i.Name))</p>
            }
            else
            {
            <p>Nessun ingrediente selezionato</p>
            }


        </div>
    </div>
</div>