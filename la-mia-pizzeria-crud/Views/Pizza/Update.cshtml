@model PizzaFormModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>
                @Model.Pizza.Name
            </h1>

            <form asp-controller="Pizza" asp-action="Update" asp-route-id="@Model.Pizza.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Nome:</strong>
                    <input asp-for="Pizza.Name" class="form-control">
                    <span asp-validation-for="Pizza.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Descrizione:</strong>
                    <input asp-for="Pizza.Description" class="form-control" >
                    <span asp-validation-for="Pizza.Description" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <strong>Url dell'immagine:</strong>
                    <input asp-for="Pizza.Image" class="form-control">
                    <span asp-validation-for="Pizza.Image" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input asp-for="Pizza.Prize" class="form-control">
                    <span asp-validation-for="Pizza.Prize" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="Pizza.CategoryId" class="form-control">
                        <option value="Seleziona una categoria"></option>
                        @foreach (Category category in Model.Categories)
                        {
                            @if (Model.Pizza.CategoryId == category.Id)
                            {
                                <option value="@category.Id" selected>@category.Name</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>


                </div>

                <div class="mb-3">
                    <strong>Ingredienti:</strong>
                    <select asp-for="SelectedIngredientsId"
                            multiple="multiple"
                            class="form-control"
                            asp-items="@Model.Ingredients">
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Salva</button>
            </form>
        </div>
    </div>
</div>